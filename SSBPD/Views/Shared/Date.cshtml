@model string

<select name="@String.Format("{0}Month", Model)">
    <option value="">Select month</option>
    @for (int month = 1; month <= 12; month++)
    {
        var dt = new System.Globalization.DateTimeFormatInfo();
        <option value="@month">@dt.GetMonthName(month)</option>
    }
</select>
<select name="@String.Format("{0}Day", Model)">
    <option value="">Select day</option>
    @for (int day = 1; day <= 31; day++)
    {
        <option value="@day">@day</option>
    }
</select>
<select name="@String.Format("{0}Year", Model)">
    <option value="">Select year</option>
    @for (int year = 2003; year <= 2013; year++)
    {
        <option value="@year">@year</option>
    }
</select>