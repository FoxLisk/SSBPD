@model SSBPD.ViewModels.BracketViewModel
@if (!String.IsNullOrWhiteSpace(Model.errorMessage))
{
    <p class="error">@Model.errorMessage</p>
}
else
{
    <p>
        Winners bracket:</p>
    <table cellspacing="0" class="viewbracket">
        @for (int i = 0; i < Model.winnersGrid.GetLength(0); i++)
        {
            <tr>
                @for (int j = 0; j < Model.winnersGrid.GetLength(1); j++)
                {
                    var cell = Model.winnersGrid[i, j];
       
                    <td class="@cell.classes">@cell.tag
                    </td>
                }
            </tr>
        }
    </table>
    <br />
    <p>
        Losers bracket:</p>
    <table cellspacing="0" class="viewbracket">
        @for (int i = 0; i < Model.losersGrid.GetLength(0); i += 2)
        {
            <tr>
                @for (int j = 0; j < Model.losersGrid.GetLength(1); j++)
                {
                    var cell = Model.losersGrid[i, j];
       
                    <td class="@cell.classes">@cell.tag
                    </td>
                }
            </tr>
        }
    </table>
}